{
  "name": "Speak 2 Click",
  "version": "0.1",
  "description": "Speech triggers a click",
  "manifest_version": 2,
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["script.js"]    },
  "commands": {
    "start-speech": {
      "suggested_key": { "default": "Alt+L" },
      "description": "Start Speech Recognition"
    }
  }
}
